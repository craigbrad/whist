source 'https://rubygems.org'

# app
gem 'rails', '4.1.8'

# server
gem "thin"

# database
gem 'sqlite3'

# assets
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'

# views
gem "slim"
gem "simple_form"

# api
gem 'jbuilder', '~> 2.0'

# dev
gem 'spring', group: :development

# tests

gem "poltergeist"

group :test do
  gem "rspec"
  gem "factory_girl"
  gem "capybara"
end
