source 'https://rubygems.org'

# heroku
gem "rails_12factor"

# app
gem 'rails', '4.1.8'

# server
gem "thin"

# database
gem 'pg'

# admin
gem 'rails_admin'

# assets
gem 'bootstrap-sass', '~> 3.3.3'
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'

# views
gem "slim"
gem "simple_form"

# api
gem 'jbuilder', '~> 2.0'

# dev
group :development do
  gem "spring"
  gem "launchy"
end

# tests

gem "poltergeist"

group :test do
  # see: http://stackoverflow.com/questions/16866520/rails-4-rspec-warning-you-should-require-minitest-autorun-instead
  gem "minitest"

  gem "rspec"
  gem "rspec-rails"
  gem "factory_girl"
  gem "capybara"
  gem "database_cleaner"
  gem "faker"
end
